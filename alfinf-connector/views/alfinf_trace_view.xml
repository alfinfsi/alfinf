<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="alfinf_trace_action" model="ir.actions.act_window">
         <field name="name">Trace</field>
         <field name="res_model">alfinf.trace</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
               Click to create a new trace.
           </p><p>
                A trace is a record of the changes made to a record.
           </p>
        </field>
    </record>
    <record id="action_alfinf_trace" model="ir.actions.act_window">
        <field name="name">Trace</field>
        <field name="res_model">alfinf.trace</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <record id="view_alfinf_trace_tree" model="ir.ui.view">
        <field name="name">alfinf.trace.tree</field>
        <field name="model">alfinf.trace</field>
        <field name="arch" type="xml">
            <tree string="Trace">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_alfinf_trace_form" model="ir.ui.view">
        <field name="name">alfinf.trace.form</field>
        <field name="model">alfinf.trace</field>
        <field name="arch" type="xml">
            <form string="Trace">
                <field name="name"/>
            </form>
        </field>
    </record>
    <record id="view_alfinf_trace_search" model="ir.ui.view">
        <field name="name">alfinf.trace.search</field>
        <field name="model">alfinf.trace</field>
        <field name="arch" type="xml">
            <search string="Trace">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="alfinf_trace_action" model="ir.actions.act_window">
        <field name="name">Alfinf Traces</field>
        <field name="res_model">alfinf.trace</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new employment type
            </p>
        </field>
    </record>

    <menuitem action="alfinf_trace_action"
              id="alfinf_trace_menu"
              parent="sale.sale_order_menu"
              sequence="100"
    />

</odoo>
